<% content_for :title do %>Suche nach <%= @term %><% if !@papers.first_page?%> (Seite <%= @papers.current_page %>)<% end %><% end %>

<% content_for :main_fullwidth do %>
<div class="jumbotron jumbotron--search">
  <div class="container">
    <form action="/search" method="get" role="search" class="search">
      <div class="input-group">
        <input type="search" id="searchq" name="q" class="form-control" placeholder="Suche nach Themen wie &quot;Schulen&quot;, &quot;Mobilität&quot;, &hellip;" value="<%= @term %>"/>
        <span class="input-group-btn">
          <button class="btn btn-success" type="submit">Suchen</button>
        </span>
      </div>
    </form>
  </div>
</div>
<% end %>

<% if @papers.size > 0 %>

<ol class="paper-list paper-list--with-body">
  <% @papers.with_details.each do |paper, details| %>
  <li>
    <%
      title = details[:highlight][:title].try(:html_safe) || paper.title
      snippet = details[:highlight][:contents] || ""
      snippet += "&hellip;" unless snippet.blank?
    %>
    <p>
      <span class="source">
      <%= link_to paper.body.state, paper.body, title: paper.body.name %>
      <span class="label label-default"><%= link_to_paper paper.full_reference, paper %></span></span>
      <%= link_to_paper title, paper, class: 'searchresult-title' %>
    </p>
    <p class="meta">
      Eingereicht von: <%= paper.originators.collect(&:name).join(', ') %> &mdash; Veröffentlicht am <time datetime="<%= paper.published_at.iso8601 %>"><%= l paper.published_at %></time>
    </p>
    <p class="searchresult-snippet"><%= snippet.gsub(/[\t\n]/, ' ').html_safe %></p>
  </li>
  <% end %>
</ol>

<p class="pagination-total"><%= @papers.total_count %> <%= t :kleine_anfragen, count: @papers.total_count %></p>
<%= paginate @papers %>

<% else %>
<div class="well">
  Es wurden leider keine kleinen Anfragen gefunden, die mit Ihrer Suche übereinstimmen.
</div>
<% end %>