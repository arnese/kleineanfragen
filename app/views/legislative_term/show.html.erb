<% title "#{@body.name}, #{@legislative_term}. Wahlperiode" -%>
<%- content_for :head do %><%= auto_discovery_link_tag(:atom, body_feed_url(body: @body, format: :atom)) %><% end -%>

<div class="page-header page-header--has-feed">
  <h1><%= link_to @body.name, @body %> &mdash; <%= @legislative_term %>. Wahlperiode</h1>
  <%= link_to image_tag('feed-icon.svg', class: 'feed-icon'), body_feed_url(body: @body, format: :atom), class: 'feed' %>
</div>

<ol class="paper-list">
  <%= render partial: 'paper/paper', collection: @papers %>
</ol>

<p class="pagination-total"><%= @papers.total_count %> kleine Anfragen</p>
<%= paginate @papers %>