<% title @body.name %>

<div class="page-header">
  <h1><%= @body.name %> <small><code>(<%= @body.state %>)</code></small></h1>
</div>

<div class="row">
  <div class="col-md-6">
    <ol class="legislative-terms-overview">
      <% @terms.each do |term, count| %>
      <li class="row">
        <h2 class="col-xs-9 col-sm-10"><%= link_to "#{term.to_s}. Wahlperiode", legislative_term_path(@body, term) %></h2>
        <div class="paper-count col-xs-3 col-sm-2">
          <span><%= count %></span> <br/>
          <%= t :anfragen, count: count %>
        </div>
      </li>
      <% end %>
    </ol>
  </div>

  <div class="col-md-6">
    <h3>BehÃ¶rden:</h3>
    <ul>
      <% @body.ministries.each do |ministry| %>
      <li><%= link_to ministry.name, ministry_path(@body, ministry) %></li>
      <% end %>
    </ul>
  </div>
</div>